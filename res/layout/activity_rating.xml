<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eeeeee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a04.cabpool.MainActivity" >

    <RatingBar
        android:id="@+id/cabRatingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:numStars="5" />

    <Button
        style="@style/button_style"
        android:id="@+id/rateCabButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cabRatingBar"
        android:layout_alignRight="@+id/cabRatingBar"
        android:layout_below="@+id/cabRatingBar"
        android:layout_marginTop="20dp"
        android:text="@string/submit_rating" />

    <TextView
        style="@style/text_style"
        android:id="@+id/Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cabRatingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textSize="30sp"
        android:text="Rate your ride!" />

</RelativeLayout>
